
# To-Do List Application

# Data structure to store tasks

tasks = {}

# Function to add a task

def add_task(task_description):

task_id = len(tasks) + 1

tasks[task_id] = {"description": task_description, "completed": False}

print(f"Task added: {task_description}")

# Function to delete a task

def delete_task(task_id):

 if task_id in tasks:

 del tasks[task_id]

 print(f"Task {task_id} deleted.")

else:

print("Task not found.")

# Function to display the tasks def display_tasks():

if not tasks:

print("No tasks in the to-dolist.") else:

print("To-Do List:")

for task_id, task_info in tasks.items():

status = "Completed" if task_info["completed"] else "Not Completed" 

print(f"{task_id}. {task_info['description']} - {status}")

Function to mark a task as complete

def mark_complete(task_id):

if task_id in tasks:
tasks[task_id]["completed"] = True print(f"Task {task_id} marked as 

complete.")

else:

print("Task not found.")

Sample usage of the functions add_task("Buy groceries") 

add_task("Finish coding assignment") display_tasks()

mark_complete(1)

display_tasks()

delete_task(2)

display_tasks()
